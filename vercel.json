{
  "version": 2,
  "buildCommand": "echo 'No build needed'",
  "public": true,
  "functions": {
    "api/**/*.js": {
      "runtime": "nodejs18.x"
    }
  },
  "rewrites": [
    { "source": "/verify-email", "destination": "/verify-email.html" },
    { "source": "/reset-password", "destination": "/reset-password.html" }
  ],
  "headers": [
    {
      "source": "/(.*)",
      "headers": [
        {
          "key": "Access-Control-Allow-Origin",
          "value": "*"
        }
      ]
    }
  ]
}
